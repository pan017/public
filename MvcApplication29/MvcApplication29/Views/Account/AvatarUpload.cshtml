<div>
    <img id="image" src="~/Content/images/None-Avatar.jpg" width="200" height="200"> <br> <br>

        @using (Html.BeginForm("Upload", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <input id="imgInput" type="file" name="file" /><br>
        <input type="submit" class="btn btn-large btn-primary" value="Загрузить аватарку" />
    }
</div>
<script>
    function readURL(input) {

        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#image').attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#imgInput").change(function () {
        readURL(this);
    });
</script>